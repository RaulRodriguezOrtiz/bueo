<% content_for(:sidebar) do %>
    <%= render :partial => "layouts/sidebar" %>
<% end %>

<% flash.each do |key, value| %>
	<div class="alert alert-<%= key %>" style="margin-top: 5px"> <%= value %></div>
<% end %>
<div class="panel panel-default">
  <div class="panel-heading" style="background-color: #58781e;border-bottom: #f0ad4e 4px solid;font-family: Roboto;font-weight: 300;font-size: 17px;color: white;text-transform: uppercase;"><i class="fa fa-credit-card"></i> <%= @title %></div>
    <div class="panel-body">
    	
        <!-- <form method="GET" action="/apps/uang/masuk/" accept-charset="UTF-8"> -->
        	<%= form_tag(apps_uang_masuk_url, method: :get) do %>
            <div class = "input-group">
                <span class = "input-group-btn">
                    <a href="/apps/uang/masuk/add/" class = "btn btn-default" style="background-color: #58781e;border-color: #58781e;color:white" type = "button"><i class="fa fa-plus-circle"></i> Tambah
                    </a>
                </span>
                <%= text_field_tag :search, params[:search], class: "form-control", required: "required", placeholder: "Cari Berdasarkan Keterangan Uang Masuk" %>
                <span class = "input-group-btn">
                	<button class = "btn btn-default" style="background-color: #58781e;border-color: #58781e;color:white" type = "submit">
                       <i class="fa fa-search"></i> Cari
                	</button>
                </span>
            </div>
        <% end %>
        <br>
        <table class="table table-striped table-bordered table-hover">
            <thead>
              <tr>
              	<th class="text-center"><i class="fa fa-vcard-o"></i> NO.</th>
                <th class="text-center"><i class="fa fa-credit-card"></i> JUMLAH UANG MASUK</th>
                <th class="text-center"><i class="fa fa-calendar-o"></i> TANGGAL</th>
                <th class="text-center"><i class="fa fa-file-o"></i> KETERANGAN</th>
                <th class="text-center"><i class="fa fa-cogs"></i> OPTIONS</th>
              </tr>
            </thead>

            <tbody>
              <% @data_uang_masuk.each_with_index do |data, index| %>
                <tr>
                  <td style="text-align: center;"><%= index + 1 %></td>
                  <td><%= data.jumlah %></td>
                  <td><%= data.tanggal %></td>
                  <td><%= data.keterangan %></td>
                  <td style="text-align: center;">
                      <a href="/apps/uang/masuk/edit/<%= data.id %>/" class="btn btn-success btn-sm" style="background-color: #58781e;border-color: #58781e"><i class="fa fa-pencil"></i> Edit</a>
                      <a href="/apps/uang/masuk/delete/<%= data.id %>/" class="btn btn-danger btn-sm" style="background-color: #c38122;border-color: #c38122"><i class="fa fa-trash"></i> Delete</a>
                  </td>
                </tr>
              <% end %>
            </tbody>
        </table>
        <div class="text-center">
        <%= paginate @data_uang_masuk %>
    	</div>
    </div>
</div>