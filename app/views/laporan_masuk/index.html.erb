<% content_for(:sidebar) do %>
    <%= render :partial => "layouts/sidebar" %>
<% end %>

<% flash.each do |key, value| %>
    <div class="alert alert-<%= key %>" style="margin-top: 5px"> <%= value %></div>
<% end %>
<div class="panel panel-default">
  <div class="panel-heading" style="background-color: #58781e;border-bottom: #f0ad4e 4px solid;font-family: Roboto;font-weight: 300;font-size: 17px;color: white;text-transform: uppercase;"><i class="fa fa-print"></i> <%= @title %></div>
    <div class="panel-body">
        
        <%= form_tag(apps_laporan_masuk_url, method: :get) do %>
            
            <div class="col-md-6">
            	<label><i class="fa fa-calendar-o"></i> DARI TANGGAL</label>
            	<%= text_field_tag :dari_tanggal, params[:dari_tanggal], class: "form-control", required: "required", type: "date", required: "required" %>
            </div>

            <div class="col-md-6">
            	<label><i class="fa fa-calendar-o"></i> SAMPAI TANGGAL</label>
            	<%= text_field_tag :sampai_tanggal, params[:sampai_tanggal], class: "form-control", required: "required", type: "date", required: "required" %>
            </div>
            
            <div class="col-md-12" style="margin-top: 10px">
	            <div class="form-group">
	                <button type="submit" class="btn btn-success" style="cursor:pointer;background-color: #58781e;border-color: #58781e"><i class="fa fa-filter"></i> Filter Data</button>
	            </div>
        	</div>

        <% end %>



    </div>
</div>

<div class="panel panel-default">
  <div class="panel-heading" style="background-color: #58781e;border-bottom: #f0ad4e 4px solid;font-family: Roboto;font-weight: 300;font-size: 17px;color: white;text-transform: uppercase;"><i class="fa fa-credit-card"></i> DATA UANG MASUK</div>
    <div class="panel-body">
      <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover">
            <thead>
              <tr>
                <th class="text-center"><i class="fa fa-credit-card"></i> JUMLAH UANG MASUK</th>
                <th class="text-center"><i class="fa fa-calendar-o"></i> TANGGAL</th>
                <th class="text-center"><i class="fa fa-file-o"></i> KETERANGAN</th>
              </tr>
            </thead>

            <tbody>
              <% if @data_uang_masuk == nil %>
              <% else %>
                <% @data_uang_masuk.each do |data| %>

                <% 
                  
                %>

                  <tr>
                    <td><%= data.jumlah %></td>
                    <td><%= data.tanggal %></td>
                    <td><%= data.keterangan %></td>
                  </tr>
                <% end %>
              <% end %>
            </tbody>
        </table>
      </div>
        <div class="text-center">
        
    	</div>
      <% if @data_uang_masuk.present? %>
      	<div class="text-right">
          	<span style="font-size: 17px;font-weight: 500;"><i class="fa fa-credit-card"></i> TOTAL UANG MASUK : 
            <% c = @data_uang_masuk.map {|m| m.jumlah.to_i} %>
            <%= number_to_currency(c.inject(0) {|sum,x| sum + x }, unit: "", separator: ",", delimiter: ".") %>
            </span> 
            <b style="font-size: 17px;font-weight: 900;"></b>
      	</div>
      <% end %>
    </div>
</div> 