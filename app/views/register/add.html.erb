<% content_for(:sidebar) do %>
    <%= render :partial => "layouts/sidebar" %>
<% end %>

<div class="panel panel-default">
  <div class="panel-heading" style="background-color: #58781e;border-bottom: #f0ad4e 4px solid;font-family: Roboto;font-weight: 300;font-size: 17px;color: white;text-transform: uppercase;"><i class="fa fa-users"></i> <%= @title %></div>
    <div class="panel-body">
        <form action="/apps/users/create" method="POST">
            <div class="form-group">
                <label for="name"><i class="fa fa-user"></i> NAMA LENGKAP</label>
                <input type="text" class="form-control" name="user[name]" id="name" aria-describedby="name" placeholder="Masukkan Nama Lengkap Anda" required>
                <input type="hidden" name="authenticity_token" value="<%=form_authenticity_token%>">
            </div>

            <div class="form-group">
                <label for="username"><i class="fa fa-user-circle"></i> USERNAME</label>
                <input type="text" class="form-control" name="user[username]" id="username" aria-describedby="username" placeholder="Masukkan Username Anda" required>
            </div>
            <div class="form-group">
                <label for="password"><i class="fa fa-unlock"></i> PASSWORD</label>
                <input type="password" class="form-control" name="user[password]" id="password" placeholder="Masukkan Password Anda" required>
            </div>
            
            <div class="form-group">
                <button type="submit" class="btn btn-success" style="cursor:pointer;background-color: #58781e;border-color: #58781e"><i class="fa fa-save"></i> Simpan </button>
                <a href="/apps/users/" class="btn btn-danger btn-md" style="cursor:pointer;background-color: #c38122;border-color: #c38122"><i class="fa fa-long-arrow-left"></i> Batal</a>
            </div>
        </form>                      
    </div>
</div>